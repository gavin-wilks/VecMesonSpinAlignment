<?xml version="1.0" encoding="utf-8" ?>

<job minFilesPerProcess="5" filesPerHour="20" maxFilesPerProcess="10" fileListSyntax="paths" simulateSubmission="false">

  <command>
    root -l -b -q myhadd.C\(\"$FILELIST\",\"$JOBID\",\"&outFile;\"\)&gt;&amp; ${JOBID}.log
  </command>

  <SandBox installer="ZIP">
    <Package>
      <File>file:./myhadd.C</File>
    </Package>
  </SandBox>

  <input URL="filelist:&listPath;/EventPlane_hadd.list" />

  <stdout discard="true"/>
  <stderr URL="file:&outPath;/hadd/DirectFillLog/&outDir;/$JOBID.err"/>

  <Generator>
    <ReportLocation>./JOBS/report/</ReportLocation>
    <ScriptLocation>./JOBS/csh/</ScriptLocation>
    <ListLocation>./JOBS/list/</ListLocation>
  </Generator>

  <output fromScratch="*.root" toURL="file:&outPath;/hadd/DirectFill/&outDir;/" />
  <output fromScratch="*.log" toURL="file:&outPath;/hadd/DirectFillLog/&outDir;/" />
</job>
